<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.perico.appbluetoothperico.MainActivity"
    android:background="#0E325E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/consola"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.27"></LinearLayout>

        <LinearLayout
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.01">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.02">

                <LinearLayout
                    android:layout_width="14dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="56dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g5"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:background="#0E325E"
                        android:drawableTop="@mipmap/izqarriba"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g1"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.22"
                        android:background="#0E325E"
                        android:drawableTop="@mipmap/flecha_arriba"

                        android:gravity="center"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="#0E325E"
                        android:drawableTop="@mipmap/derarriba" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/g2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:background="#0E325E"
                        android:drawableLeft="@mipmap/flecha_izq"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g3"
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="#0E325E"
                        android:drawableRight="@mipmap/flecha_der"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0.09"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0E325E"
                        android:drawableBottom="@mipmap/izqabajo"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g4"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_gravity="center"
                        android:background="#0E325E"
                        android:drawableBottom="@mipmap/flecha_abajo"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/g7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0E325E"
                        android:drawableBottom="@mipmap/derabajo"
                        android:text="" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:orientation="horizontal"
        android:weightSum="1"
        >


        <RelativeLayout
            android:id="@+id/layout_joystick"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="95dp"
            android:background="@mipmap/cuadrado"></RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:weightSum="1">

            <Button
                android:id="@+id/musicaBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:drawableLeft="@mipmap/musica_opt"
                android:background="#0E325E" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/luces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="#0E325E"
                android:drawableBottom="@mipmap/luz_plana_opt_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/desconectar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.48"
                android:gravity="left"
                android:background="#0E325E"
                android:drawableRight="@mipmap/desconecta"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
